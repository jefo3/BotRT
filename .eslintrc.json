{
  "env": {
      "browser": true,
      "es2021": true
  },
  "extends": [
      "airbnb-base",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
  },
  "plugins": [
      "@typescript-eslint",
      "prettier"
  ],
  "rules": {
      "no-use-before-define": "off",
      "@typescript-eslint/no-use-before-define": [
          "error"
      ],
      "import/extensions": [
          "error",
          "ignorePackages",
          { "ts": "never" }
      ],
      "prettier/prettier": "error"
  },
  "settings": {
      "import/resolver": {
          "typescript": {}
      }
  }
}
